<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="editors" method="upgrade">
	<name>plg_editors_ace</name>
	<version>0.0.11</version>
	<creationDate>November 2014</creationDate>
	<author>Sven Bluege</author>
	<authorEmail>svenbluege@gmail.com</authorEmail>
	<authorUrl>www.svenbluege.de</authorUrl>
	<copyright></copyright>
	<license>GNU General Public License version 2 or later</license>
	<description>PLG_ACE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="ace">ace.php</filename>
		<filename>SpellGoogle.php</filename>	
		<filename>index.html</filename>	
		<folder>ace</folder>
		<folder>js</folder>
	</files>
	<languages folder="admin">
		<language tag="en-GB">language/en-GB.plg_editors_ace.ini</language>
		<language tag="en-GB">language/en-GB.plg_editors_ace.sys.ini</language>
	</languages>
		<config>
		<fields name="params">
			<fieldset name="SPELLCHECK">
				<field name="use_spellchecker" type="radio" default="0" label="PLG_EDITOR_ACE_CONFIG_SPELLCHECK_LABEL" description="PLG_EDITOR_ACE_CONFIG_SPELLCHECK_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="language" type="radio" default="en" label="PLG_EDITOR_ACE_CONFIG_LANG_LABEL" description="PLG_EDITOR_ACE_CONFIG_LANG_DESC">
					<option value="de">de</option>
					<option value="en">en</option>
				</field>
			</fieldset>
			<fieldset name="basic">
				<field name="syntax" type="radio" default="html" label="PLG_EDITOR_ACE_CONFIG_SYNTAX_LABEL" description="PLG_EDITOR_ACE_CONFIG_SYNATX_DESC">
					<option value="html">HTML</option>
					<option value="markdown">MarkDown</option>
				</field>
				<field name="showPrintMargin" type="radio" default="false" label="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_LABEL" description="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_DESC">
					<option value="true">on</option>
					<option value="false">off</option>
				</field>
				<field name="showPrintMargin" type="radio" default="false" label="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_LABEL" description="PLG_EDITOR_ACE_CONFIG_PRINTMARGIN_DESC">
					<option value="true">on</option>
					<option value="false">off</option>
				</field>
		</fieldset>
		</fields>
	</config>
</extension>
